  <script>
    const ball = document.querySelector('.ball');
    const title = document.querySelector('.title');
    const loadingBar = document.querySelector('.loading-bar');
    const matrix = document.querySelector('.matrix');

    function createRain() {
      const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
      const numberOfDrops = 100;
      for (let i = 0; i < numberOfDrops; i++) {
        const span = document.createElement('span');
        span.textContent = characters.charAt(Math.floor(Math.random() * characters.length));
        span.style.left = `${Math.random() * 100}vw`;
        span.style.animationDuration = `${Math.random() * 2 + 1}s`;
        matrix.appendChild(span);
      }
    }
    createRain();

    // Fade-out matrix after loading
    loadingBar.addEventListener('animationend', function () {
      matrix.style.animation = 'fadeOutMatrix 2s forwards';
      setTimeout(function() {
        title.style.animation = 'typing 4s steps(12) 1s forwards, fadeInText 1.2s ease 5.2s forwards';
      }, 3000);
    });

    // Fade out ball at end of animation
    ball.addEventListener('animationend', function () {
      ball.classList.add('fadeout');
    });
  </script>

  <!-- Designed by Slayd Dev (https://github.com/slayddev) -->
