    }

    * { box-sizing:border-box }
    body {
      margin:0;
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      background:#000; /* Dark background for contrast */
      color:white;
      font-family:Inter, system-ui, -apple-system, 'Segoe UI', Arial;
      overflow:hidden;
    }

    .stage {
      position:relative;
      display:grid;
      place-items:center;
    }

    /* Matrix Code Rain */
    .matrix {
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
      color:#00ff00;
      font-family:'Courier New', Courier, monospace;
      font-size:18px;
      white-space:nowrap;
      overflow:hidden;
      pointer-events:none;
    }
    .matrix span {
      position:absolute;
      top:-100%;
      animation:rain 0.3s linear infinite;
    }
    @keyframes rain {
      0% { top:-100%; }
      100% { top:100%; }
    }

    /* Title text revealed after loader */
    .title {
      font-weight:900;
      font-size:48px;
      letter-spacing:2px;
      text-transform:uppercase;
      -webkit-text-stroke:2px var(--rim);
      color:transparent;
